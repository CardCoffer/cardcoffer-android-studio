
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:droidicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:ignore="Suspicious0dp" >


    <ViewFlipper android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/exchange_viewFlipper"
        android:background="@color/sidebar_gray">


        <!-- Sending Layout -->


        <LinearLayout
            android:id="@+id/nfc_llSending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tvNFC_receiving"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/nfc_receive_mode_phones"
                android:textColor="@color/mild_gray"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvExchange_tapToSend"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/nfc_receive_mode_phones_then"
                android:textColor="@color/mild_gray"
                android:gravity="center"/>
            <com.thedazzler.droidicon.badges.DroidiconBadge
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                droidicon:db_icon_color="@color/mild_gray"
                droidicon:db_icon="gmd-nfc"
                droidicon:db_size="200dp"
                />
            <TextView
                android:id="@+id/tvNFC_receiving_card"
                android:layout_width="200dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="@string/nfc_receive_mode_card"
                android:textColor="@color/mild_gray"
                android:gravity="center"/>



        </LinearLayout>















    </ViewFlipper>

</ScrollView>