<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="0.5dp"
    android:background="@drawable/frame_card_thumb"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/card_thumb_logo" 
        android:layout_width="60dp"
        android:layout_height="60dp" android:contentDescription="@string/card_logo"
        android:layout_margin="2dp"
        android:src="@drawable/logo_complete"/>
    
    <LinearLayout 
        android:id="@+id/card_thumbnail_infoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        
        android:orientation="vertical">
        
       <TextView android:id="@+id/card_thumbnail_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:textStyle="bold"
           android:layout_marginTop="0.5dp"
           android:text="Sina Sheikholeslami"/>
       
       <TextView android:id="@+id/card_thumbnail_jobTitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="0.5dp"
           android:textSize="15sp"
           android:text="Mobile Developer"/>
       
       <TextView android:id="@+id/card_thumbnail_affiliation"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="1.5dp"
           android:textSize="15sp"
           android:textStyle="italic"
           android:text="Card Coffer"/>
       
       
    </LinearLayout>
    

</LinearLayout>
